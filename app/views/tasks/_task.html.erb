<div class="rcf">

<% if task.completed? %>
<div class="complete">
<%= button_to "ADDED", complete_project_task_path(@project, task.id),
method: :patch%>
<i style="opacity:0.4;"></i>
</div>

<div class="task">
<p style="opacity: 0.4;"><strike><%= task.content %></strike></p>
</div>

<div class="trash">
<%= button_to "Delete this Ingredient", project_task_path(@project, task.id),
method: :delete, data: { turbo_confirm: "Are you sure?"}%>
</div>

<% else %>
<div class="complete2">
<%= button_to "Mark this ingredient as been ADDED", complete_project_task_path(@project, task.id),
method: :patch%>
</div>

<div class="todo_item">
<p><%= task.content %></p>
</div>

<div class="trash2">
<%= button_to "Delete this Ingredient", project_task_path(@project, task.id),
method: :delete, data: { turbo_confirm: "Are you sure?"}%>
</div>
<% end %>
</div>
